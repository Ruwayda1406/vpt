// #package uispecs

// #section DOSRendererDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 10,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Slices:",
      "children": [
        {
          "type": "spinner",
          "bind": "slices",
          "value": 200,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Occlusion scale:",
      "children": [
        {
          "type": "spinner",
          "bind": "occlusionScale",
          "value": 0.01,
          "min": 0,
          "max": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Occlusion decay:",
      "children": [
        {
          "type": "slider",
          "bind": "occlusionDecay",
          "value": 0.9,
          "min": 0,
          "max": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Visibility:",
      "children": [
        {
          "type": "slider",
          "bind": "visibility",
          "value": 0.9,
          "min": 0,
          "max": 1
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Transfer function",
      "children": [
        {
          "type": "panel",
          "bind": "tfcontainer"
        }
      ]
    }
  ]
}