// #package uispecs

// #section DOSRendererDialog

{
  "type": "_panel",
  "children": [
    {
      "type": "field",
      "label": "Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 10,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Slices:",
      "children": [
        {
          "type": "spinner",
          "bind": "slices",
          "value": 200,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Occlusion scale:",
      "children": [
        {
          "type": "spinner",
          "bind": "occlusionScale",
          "value": 0.01,
          "min": 0,
          "max": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Occlusion decay:",
      "children": [
        {
          "type": "spinner",
          "bind": "occlusionDecay",
          "value": 0.9,
          "min": 0,
          "max": 1
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Probability parameter",
      "children": [
        {
          "type": "field",
          "label": "Light Position:",
          "children": [
            {
              "type": "vector",
              "bind": "position",
              "value": 0.5
            }
          ]
        },
        {
          "type": "field",
          "label": "ks:",
          "children": [
            {
              "type": "spinner",
              "bind": "ks",
              "value": 0.1,
              "step": 0.01,
               "min": 0
            }
          ]
        },
        {
          "type": "field",
          "label": "kt:",
          "children": [
            {
              "type": "spinner",
              "bind": "kt",
              "value": 0.1,
              "step": 0.01,
               "min": 0
            }
          ]
        }
      ]
    }
  ]
}