// #package uispecs

// #section VisibilityGroup

{
  "type": "panel",
  "children": [
    {
      "type": "panel",
      "bind": "controlPanel"
    },
    {
      "type": "panel",
      "children": [
        {
          "type": "field",
          "label": "Property:",
          "children": [
            {
              "type": "dropdown",
              "bind": "attribute"
            }
          ]
        },
        {
          "type": "field",
          "label": "Range:",
          "children": [
            {
              "type": "vector",
              "bind": "range"
            }
          ]
        },
        {
          "type": "field",
          "label": "Visibility:",
          "children": [
            {
              "type": "slider",
              "bind": "visibility"
            }
          ]
        },
        {
          "type": "field",
          "label": "Color:",
          "children": [
            {
              "type": "color-chooser",
              "bind": "color"
            }
          ]
        }
      ]
    },
    {
      "type": "spacer",
      "bind": "spacer",
      "height": "1px"
    }
  ]
}