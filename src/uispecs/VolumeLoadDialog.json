// #package uispecs

// #section VolumeLoadDialog

{
  "type": "_panel",
  "children": [
    {
      "type": "field",
      "label": "Type:",
      "children": [
        {
          "type": "dropdown",
          "bind": "type",
          "options": [
            {
              "value": "file",
              "label": "File",
              "selected": true
            },
            {
              "value": "url",
              "label": "URL"
            },
            {
              "value": "demo",
              "label": "Demo"
            }
          ]
        }
      ]
    },
    {
      "type": "_panel",
      "bind": "filePanel",
      "visible": true,
      "children": [
        {
          "type": "field",
          "label": "File:",
          "children": [
            {
              "type": "file-chooser",
              "bind": "file"
            }
          ]
        },
        {
          "type": "_panel",
          "bind": "rawSettingsPanel",
          "visible": false,
          "children": [
            {
              "type": "field",
              "label": "Dimensions:",
              "children": [
                {
                  "type": "vector",
                  "bind": "dimensions",
                  "value": 128,
                  "min": 1
                }
              ]
            },
            {
              "type": "field",
              "label": "Precision:",
              "children": [
                {
                  "type": "radio",
                  "bind": "precision",
                  "options": [
                    {
                      "value": 8,
                      "label": "8-bit",
                      "selected": true
                    },
                    {
                      "value": 16,
                      "label": "16-bit"
                    },
                    {
                      "value": 32,
                      "label": "32-bit"
                    }
                  ]
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "_panel",
      "bind": "urlPanel",
      "visible": false,
      "children": [
        {
          "type": "field",
          "label": "URL:",
          "children": [
            {
              "type": "textbox",
              "bind": "url",
              "placeholder": "http://"
            }
          ]
        }
      ]
    },
    {
      "type": "_panel",
      "bind": "demoPanel",
      "visible": false,
      "children": [
        {
          "type": "field",
          "label": "File:",
          "children": [
            {
              "type": "dropdown",
              "bind": "demo"
            }
          ]
        }
      ]
    },
    {
      "type": "_panel",
      "bind": "loadButtonAndProgress",
      "visible": false,
      "children": [
        {
          "type": "field",
          "children": [
            {
              "type": "button",
              "bind": "loadButton",
              "label": "Load"
            }
          ]
        },
        {
          "type": "field",
          "children": [
            {
              "type": "progress-bar",
              "bind": "loadProgress"
            }
          ]
        }
      ]
    }
  ]
}